/[if !IE]>
%html{lang: 'en', class: 'no-js'}
  /<![endif]
  %head
    %title #{data.page.title || "The Middleman"}
    %meta(http-equiv="content-type" content="text/html" charset="utf-8")
    %meta(http-equiv="x-ua-compatible" content="ie=edge,chrome=1")
    %meta(name="description" content="")
    %meta(name="author" content="")

    -# Standard viewport tag to set the viewport to the device's width,
    -# Android 2.3 devices need this so 100% width works properly and
    -# doesn't allow children to blow up the viewport width
    %meta{content: "initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width", name: "viewport"}

    -# Fix for iPhone 5 fullscreen web apps
    %meta(name="viewport" content="initial-scale=1.0,user-scalable=no,maximum-scale=1" media="(device-height: 568px)")
    %meta(name='apple-mobile-web-app-capable' content='yes')
    %meta(name='apple-mobile-web-app-status-bar-style' content='translucent-black')

    -# App Icons
    %link(rel="shortcut icon" href="/images/favicon.ico")
    %link(rel="apple-touch-icon-precomposed" href="/images/apple-touch-icon-precomposed.png")
    %link(rel="apple-touch-icon-precomposed" sizes="57x57" href="/images/apple-touch-icon-57x57-precomposed.png")
    %link(rel="apple-touch-icon-precomposed" sizes="72x72" href="/images/apple-touch-icon-72x72-precomposed.png")
    %link(rel="apple-touch-icon-precomposed" sizes="114x114" href="/images/apple-touch-icon-114x114-precomposed.png")

    -# Stylesheets
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css'
    = stylesheet_link_tag '//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.1.1/css/bootstrap.min.css'
    = stylesheet_link_tag 'grayscale'
    = stylesheet_link_tag 'application'
  %body#page-top{class: current_page.data.body_class || 'page', "data-spy" => "scroll", "data-target" => ".navbar-custom"}
    %nav.navbar.navbar-custom.navbar-fixed-top{role: "navigation"}
      .container
        .row
          .col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
            .navbar-header.page-scroll
              %button.navbar-toggle{"data-target" => ".navbar-main-collapse", "data-toggle" => "collapse", type: "button"}
                %i.fa.fa-bars
              %a.navbar-brand{href: "#page-top"}
                = image_tag 'crowdworks-logo.png', height: 24
            / Collect the nav links, forms, and other content for toggling
            .collapse.navbar-collapse.navbar-right.navbar-main-collapse
              %ul.nav.navbar-nav
                / Hidden li included to remove active class from about link when scrolled up past about section
                %li.hidden
                  %a{href: "#page-top"}
                %li.page-scroll
                  %a.navbar__link{href: "#about"} RECENT POSTS
                %li.page-scroll
                  %a.navbar__link{href: "#download"} CATEGORY
                %li.page-scroll
                  %a.navbar__link{href: "#contact"} ARCHIVE
            / /.navbar-collapse
          / /.container
    .cover-photo
      .cover-photo__image a
    %section#about.container.content-section
      .row.content-section__body
        .col-lg-6.col-lg-offset-3.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
          = yield

    %section#download.text-center
      .download-section
        .container
          .col-lg-6.col-lg-offset-3
            %ul.list-inline.banner-social-buttons
              %li
                %a.btn.btn-default.btn-lg{href: "https://twitter.com/crowdworksjp"}
                  %i.fa.fa-twitter.fa-fw
              %li
                %a.btn.btn-default.btn-lg{href: "https://github.com/crowdworks"}
                  %i.fa.fa-github.fa-fw
              %li
                %a.btn.btn-default.btn-lg{href: "https://www.facebook.com/CrowdWorks"}
                  %i.fa.fa-facebook.fa-fw
          .col-lg-6.col-lg-offset-3.copyright
            <div>Â©2014 CrowdWorks, Inc., All Rights Reserved.</div>

    -# Javascripts
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.1.1/js/bootstrap.min.js"
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"
    = javascript_include_tag 'application'
    = javascript_include_tag 'grayscale'

